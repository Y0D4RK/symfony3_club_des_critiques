{% extends "::base.html.twig" %}

{% block content %}
    {% trans_default_domain 'FOSUserBundle' %}
    <div class="fos_user_user_show">
        <div id="profile">
            {% if vich_uploader_asset(user, 'avatar') is not empty %}
                <img src="{{ vich_uploader_asset(user, 'avatar') }}" alt="{{ user.username }}" class="profile-img img-responsive" width="180" height="180"/>
            {% else %}
                <img src="{{ asset('images/avatar/uknow_user.png') }}" alt="unknow" class="profile-img img-responsive" width="180" height="180">
            {% endif %}
            <div class="profile-text">
                <a href="{{ path('fos_user_profile_edit') }}" class="profile-btn"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Modifier</a>
                <h1 class="profile-name">{{ user.username }}</h1>
                <h4 class="profile-title">{{ user.firstname }} • {{ user.birthdate|date("m-d-Y") }}</h4>
                <span class="profile-title">{{ user.description }}</span>
            </div>
            <div>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('admin', {'id': 1}) }}" class="btn btn-block btn-warning">Accéder à l'administration du site</a>
                {% endif %}
            </div>
        </div>

        <div id="artwork_share">
            <div class="content">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <div class="title-contents">
                            <h2>Oeuvres à partager</h2>
                        </div>
                    </div>
                </div>
                <div class="row">
                    {% if artworksUser is not empty %}
                        {% for artwork in artworksUser %}
                            <div class="col-md-4 col-sm-6 latest">
                                <a href="{{ path('artwork_show', { 'id': artwork.id }) }}" class="box-link">
                                    <div class="box-hover">
                                        <div class="box-hover-content">
                                            <i class="fa fa-plus fa-3x"></i>
                                        </div>
                                    </div>
                                    {% if vich_uploader_asset(artwork, 'cover') is not empty %}
                                        <img src="{{ vich_uploader_asset(artwork, 'cover') }}" alt="{{ artwork.name }}" class="img-responsive" width="180" height="180"/>
                                    {% else %}
                                        <img src="{{ asset('images/cover/unknow_cover.jpg') }}" alt="unknow" class="img-responsive" width="180" height="180">
                                    {% endif %}
                                </a>
                                <div class="box-caption">
                                    <h4>{{ artwork.name }}</h4>
                                    <p class="text-muted">{{ artwork.author | capitalize }}</p>
                                    <hr>
                                    <ul class="list-group black">
                                        <li class="list-group-item list-group-item-heading"> {{ artwork.category.name | capitalize }}</li>
                                        <li class="list-group-item list-group-item-text"> {{ artwork.description | capitalize}}</li>
                                    </ul>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <h3 class="text-center">Il n'existe pas d'oeuvre à partager pour ce profile</h3>
                    {% endif %}
                </div>

            </div>
        </div>
    </div>

{% endblock content %}

