{% extends '::empty.html.twig' %}

{% block content %}
    {% trans_default_domain 'FOSUserBundle' %}

    <div class="panel panel-primary">
        <div class="panel-heading"> S'Identifier </div>
        <div class="panel-body">
            {% if error %}
                <div class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form action="{{ path("fos_user_security_check") }}" method="POST">

                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <div class="row">
                    <div class="col-xs-3 col-xs-offset-3">
                        <label for="username">{{ 'security.login.username'|trans }}</label>
                    </div>
                    <div class="col-xs-5">
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                    </div>
                </div>
                <div class="divSpace"></div>
                <div class="row">
                    <div class="col-xs-3 col-xs-offset-3">
                        <label for="password">{{ 'security.login.password'|trans }}</label>
                    </div>
                    <div class="col-xs-5">
                        <input type="password" id="password" name="_password" required="required" />
                    </div>
                </div>
                <div class="divSpace"></div>
                <div class="row">
                    <div class="col-xs-3 col-xs-offset-3">
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    </div>
                    <div class="col-xs-5">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    </div>
                </div>
                <div class="divSpace"></div>
                <div class="row">
                    <div class="col-xs-6 col-xs-offset-6">
                        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-primary"/>
                    </div>
                </div>
            </form>
        </div>
        <div class="panel-footer">
            <div class="row text-center">
                <div class="col-sm-4">
                    <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oublié ?</a>
                </div>
                <div class="col-sm-4">
                    <a href="#">Conditions générales</a>
                </div>
                <div class="col-sm-4">
                    <ul class="list-inline social-buttons">
                        <li>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-facebook"></i></a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-linkedin"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
            </div>
        </div>
    </div>
{% endblock content %}
