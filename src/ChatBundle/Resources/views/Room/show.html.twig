{% extends '::base.html.twig' %}


{% block content %}
    {% if room.status %}
        <header id="salon">
            <div class="container">
                <div class="row">
                    <div class="salon content-title col-lg-12">
                        <div class="col-md-7">
                            <h1>Salon {{ room.name | capitalize }} </h1>
                            <h1 class="text-warning"> {{ room.artwork.name | capitalize }} </h1>
                            <p class="text-muted">Créé par {{ room.creator | capitalize }}</p>
                            <p class="text-info"> Du {% if room.startedAt %}{{ room.startedAt|date('d/m/Y H:i:s') }}{% endif %} au {% if room.closedAt %}{{ room.closedAt|date('d/m/Y H:i:s') }}{% endif %} - {% if room.status %} {{ 'Ouvert' }} {% endif %}</p>
                            <p>content</p>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <ul id="chat-list">
                    </ul>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <textarea id="form-message" placeholder="Ton message"></textarea>
                    <input type="button" id="form-submit" value="Send message" class="btn btn-default"/>
                </div>
            </div>

            <hr>

            <div class="row">
                <div class="col-xs-12">
                    <ul>
                        <li>
                            <a href="{{ path('room_index') }}">Back to the list</a>
                        </li>
                        <li>
                            <a href="{{ path('room_edit', { 'id': room.id }) }}">Edit</a>
                        </li>
                        <li>
                            {{ form_start(delete_form) }}
                            <input type="submit" value="Delete" class="btn btn-warning">
                            {{ form_end(delete_form) }}
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    {% else %}
        <header id="salon">
            <div class="container">
                <div class="row">
                    <div class="salon content-title col-lg-12">
                        <div class="col-md-7">
                            <h1>Salon {{ room.name }} </h1>
                            <p class="text-muted">{{ room.creator }}</p>
                            <p></p>
                        </div>
                    </div>
                </div>
            </div>
        </header>
    {% endif %}
{% endblock %}

{% block javascripts %}

    <script>
        // This object will be sent everytime you submit a message in the sendMessage function.
        var clientInformation = {
            username: '{{ user.username }}'
            // You can add more information in a static object
        };

        // START SOCKET CONFIG
        /**
         * Note that you need to change the "sandbox" for the URL of your project.
         * According to the configuration in Sockets/Chat.php , change the port if you need to.
         * @type WebSocket
         */

        var conn = new WebSocket('ws://localhost:8080{{ room.route }}');

        conn.onopen = function(e) {
            console.info("Connection established succesfully");
        };

        conn.onmessage = function(e) {
            var data = JSON.parse(e.data);
            Chat.appendMessage(data.username, data.message);

            console.log(data);
        };

        conn.onerror = function(e){
            alert("Error: something went wrong with the socket.");
            console.error(e);
        };
        // END SOCKET CONFIG

        /// Some code to add the messages to the list element and the message submit.
        document.getElementById("form-submit").addEventListener("click",function(){
            var msg = document.getElementById("form-message").value;

            if(!msg){
                alert("Please send something on the chat");
            }

            Chat.sendMessage(msg);
            // Empty text area
            document.getElementById("form-message").value = "";
        }, false);

        // Mini API to send a message with the socket and append a message in a UL element.
        var Chat = {
            appendMessage: function(username,message){
                var from;

                if(username == clientInformation.username){
                    from = "{{ user.username }}";
                }else{
                    from = clientInformation.username;
                }

                // Append List Item
                var ul = document.getElementById("chat-list");
                var li = document.createElement("li");
                li.appendChild(document.createTextNode(from + " : "+ message));
                ul.appendChild(li);
            },
            sendMessage: function(text){
                clientInformation.message = text;
                // Send info as JSON
                conn.send(JSON.stringify(clientInformation));
                // Add my own message to the list
                this.appendMessage(clientInformation.username, clientInformation.message);
            }
        };
    </script>

{% endblock %}