{% extends '::base.html.twig' %}

{% block content %}

    <h1>Rooms list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Artwork</th>
                <th>Startedat</th>
                <th>Closedat</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td><a href="{{ path('room_show', { 'id': room.id }) }}">{{ room.id }}</a></td>

                <td>{{ room.name }}</td>

                <td>{{ room.artwork }}</td>
                <td>{% if room.startedAt %}{{ room.startedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if room.closedAt %}{{ room.closedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ room.status }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('room_show', { 'id': room.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('room_edit', { 'id': room.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('room_new') }}">Create a new room</a>
        </li>
    </ul>
{% endblock %}
