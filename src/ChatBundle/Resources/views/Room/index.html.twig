{% extends '::base.html.twig' %}

{% block content %}

    <section id="liste-salons">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="title-contents">
                        <i class="fa fa-comments-o fa-3x"></i>
                        <h1>Salons</h1>
                    </div>
                </div>
            </div>
            <div class="row">
                {% for room  in rooms %}
                <div class="col-md-4 col-sm-6 latest">
                    <a href="{{ path('room_show', { 'id': room.id }) }}" class="box-link">
                        <div class="box-hover">
                            <div class="box-hover-content">
                                <p>Rejoidnre ce salon</p>
                            </div>
                        </div>
                        <img src="{{ asset('images/salon.jpg') }}" class="img-responsive" alt="nom oeuvre">
                    </a>
                    <div class="box-caption">
                        <h4>{{ room.name }}</h4>
                        <p class="text-muted">{{ room.creator }}</p>
                        <p>01-01-2017 • 02-01-2017</p>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        <div class="button_addArtwork center-block">
            <a href="{{ path('room_new') }}"><button class="btn btn-primary center-block"><i class="fa fa-plus" aria-hidden="true"></i> Créer un nouveau salon </button></a>
        </div>
        <!-- pagination -->
        <div id="pagination" class="pagination p">
            <ul>
                <a href="#"><li>1</li></a>
                <a href="#"><li>2</li></a>
                <a class="is-active" href="#"><li>3</li></a>
                <a href="#"><li>4</li></a>
                <a href="#"><li>5</li></a>
                <a href="#"><li>6</li></a>
            </ul>
        </div>

    </section>

{% endblock %}
