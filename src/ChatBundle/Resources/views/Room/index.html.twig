{% extends '::base.html.twig' %}

{% block content %}

    <section id="liste-salons">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="title-contents">
                        <h1>Salons</h1>
                    </div>
                </div>
            </div>
            <div class="row">
                {% for room  in rooms %}
                <div class="col-md-4 col-sm-6 latest">
                    <a href="" class="box-link">
                        <div class="box-hover">
                            <div class="box-hover-content">
                                <a href="{{ path('room_show', { 'id': room.id }) }}">Rejoindre</a>
                            </div>
                        </div>
                        <img src="{{ asset('images/salons.jpg') }}" class="img-responsive" alt="nom oeuvre">
                    </a>
                    <div class="box-caption">
                        <h4>{{ room.name }}</h4>
                        <p class="text-muted">{{ room.creator }}</p>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>

{% endblock %}
