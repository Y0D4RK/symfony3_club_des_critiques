{% extends '::form.html.twig' %}

{% block content %}


    <div id="login" class="container">
        <div class="row">
            <div class="col-xs-12 text-center">
                <a href="{{ path('artwork_show', { 'id': artwork.id }) }}">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true"><i class="fa fa-arrow-right" aria-hidden="true"></i></span>
                    </button>
                </a>
                <div class="form-wrap">
                    <h1>Modifier l'oeuvre</h1>
                    <div class="form-group">
                        {% if vich_uploader_asset(artwork, 'cover') is not empty %}
                            <img src="{{ vich_uploader_asset(artwork, 'cover') }}" alt="{{ artwork.name }}" class="img-responsive" width="180" height="180"/>
                        {% elseif artwork.coverUrl is not empty %}
                            <img src="{{ artwork.coverUrl }}" alt="coverUrl" class="img-responsive" width="180" height="180">
                        {% else %}
                            <img src="{{ asset('images/cover/unknow_cover.jpg') }}" alt="unknow" class="img-responsive" width="180" height="180">
                        {% endif %}
                    </div>
                    {{ form_start(edit_form) }}
                    <div class="form-group">
                        {{ form_widget(edit_form.name, { 'attr': {'class': 'form-control', 'placeholder': 'edit_form.name'|trans } }) }}
                        {{ form_errors(edit_form.name) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(edit_form.description, { 'attr': {'class': 'form-control', 'placeholder': 'edit_form.description'|trans } }) }}
                        {{ form_errors(edit_form.description) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(edit_form.category, { 'attr': {'class': 'form-control', 'placeholder': 'edit_form.category'|trans } }) }}
                        {{ form_errors(edit_form.category) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(edit_form.author, { 'attr': {'class': 'form-control', 'placeholder': 'edit_form.author'|trans } }) }}
                        {{ form_errors(edit_form.author) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(edit_form.edithor, { 'attr': {'class': 'form-control', 'placeholder': 'edit_form.edithor'|trans } }) }}
                        {{ form_errors(edit_form.edithor) }}
                    </div>
                    <div class="form-group">
                        <label>Date de parution</label>
                        {{ form_widget(edit_form.publishAt, { 'attr': {'class': '', 'placeholder': 'edit_form.publishAt'|trans } }) }}
                        {{ form_errors(edit_form.publishAt) }}
                    </div>
                    <div class="form-group avatar">
                        {{ form_widget(edit_form.cover, { 'attr': {'class': 'form-control', 'placeholder': 'edit_form.cover'|trans } }) }}
                        {{ form_errors(edit_form.cover) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(edit_form.coverUrl, { 'attr': {'class': 'form-control', 'placeholder': 'Cover url'|trans } }) }}
                        {{ form_errors(edit_form.coverUrl) }}
                    </div>

                    {{ form_rest(edit_form) }}
                    <input type="submit" class="btn btn-custom btn-lg btn-block" value="{{ 'edit'|trans }}" />
                    {{ form_end(edit_form) }}
                    <hr>
                    {{ form_start(delete_form) }}
                    <input type="submit" class="btn btn-custom btn-danger btn-lg btn-block" value="{{ 'delete'|trans }}" />
                    {{ form_end(delete_form) }}
                </div>
            </div> <!-- /.col-xs-12 -->
        </div> <!-- /.row -->
    </div> <!-- /.container -->
{% endblock %}
