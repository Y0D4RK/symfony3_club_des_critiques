                            <p class="text-muted">{{ artwork.user }}</p>
                            <hr>
                            <ul class="list-group black">
                                {#<li class="list-group-item list-group-item-heading">{% if artwork.createdAt %}{{ artwork.createdAt|date('Y-m-d H:i:s') }}{% endif %}</li>#}
