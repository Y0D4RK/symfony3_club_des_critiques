{% extends 'base.html.twig' %}

{% block body %}
    <h1>Artworks list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Createdat</th>
                <th>User</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artwork in artworks %}
            <tr>
                <td><a href="{{ path('artwork_show', { 'id': artwork.id }) }}">{{ artwork.id }}</a></td>
                <td>{{ artwork.name }}</td>
                <td>{{ artwork.description }}</td>
                <td>{% if artwork.createdAt %}{{ artwork.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ artwork.user }}</td>
                <td>{{ artwork.category }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('artwork_show', { 'id': artwork.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('artwork_edit', { 'id': artwork.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('artwork_new') }}">Create a new artwork</a>
        </li>
    </ul>
{% endblock %}
