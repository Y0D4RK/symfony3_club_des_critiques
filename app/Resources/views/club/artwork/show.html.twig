{% extends '::base.html.twig' %}

{% block content %}

    <header id="content">
        <div class="container">
            <div class="row">
                <div class="content-title col-lg-12">
                    <div class="col-md-3 latest">
                        <a href="{{ path('artwork_edit', { 'id': artwork.id }) }}" class="box-link">
                            <div class="box-hover">
                                <div class="box-hover-content">
                                    <i class="fa fa-pencil-square-o fa-3x"></i>
                                </div>
                            </div>
                            {% if vich_uploader_asset(artwork, 'cover') is not empty %}
                                <img src="{{ vich_uploader_asset(artwork, 'cover') }}" alt="{{ artwork.name }}" class="img-responsive" width="180" height="180"/>
                            {% else %}
                                <img src="{{ asset('images/cover/unknow_cover.jpg') }}" alt="unknow" class="img-responsive" width="180" height="180">
                            {% endif %}
                        </a>
                    </div>
                    <div class="col-md-7">
                        <h1>{{ artwork.name }}</h1>
                        <p class="text-muted">{{ artwork.author }}</p>
                        <p><span style="font-size: 22px;"><strong> {{ artwork }}</strong></span></p>
                        <p>{% if artwork.createdAt %}{{ artwork.createdAt|date('Y-m-d H:i:s') }}{% endif %}</p>
                        <p></p>
                        {% if artwork.user == currentUserName %}
                            {{ form_start(delete_form) }}
                            <button type="submit" class="btn btn-danger"><i class="fa fa-trash-o"></i> Supprimer</button>
                            {{ form_end(delete_form) }}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </header>

    <section id="description">
        <div class="container">
            <div class="row">
                <div class="col-lg-7">
                    <h3>Resumé</h3>
                    <div class="description">
                        <p>{{ artwork.description }}</p>
                    </div>
                </div>
                <div class="col-lg-5">
                    <h3 class="text-center">Œuvre Similaires</h3>
                    {% for artworkSim in artworksSimilary %}
                        {% if artworkSim.id != artwork.id %}
                        <div class="similar latest">
                            <a href="" class="box-link">
                                <div class="box-hover">
                                    <div class="box-hover-content">
                                        <i class="fa fa-plus fa-3x"></i>
                                    </div>
                                </div>
                                {% if vich_uploader_asset(artworkSim, 'cover') is not empty %}
                                    <img src="{{ vich_uploader_asset(artworkSim, 'cover') }}" alt="{{ artworkSim.name }}" class="img-responsive" width="180" height="180"/>
                                {% else %}
                                    <img src="{{ asset('images/cover/unknow_cover.jpg') }}" alt="unknow" class="img-responsive" width="180" height="180">
                                {% endif %}
                            </a>
                            <div class="box-caption">
                                <h4>{{ artworkSim.name }}</h4>
                                <p class="text-muted">{{ artworkSim.author }}</p>
                            </div>
                        </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

{% endblock %}