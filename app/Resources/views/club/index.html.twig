{% extends '::base.html.twig' %}

{% block content %}


    <section id="header">
        <div class="header-content">
            <div class="header-content-inner">
                <h1 id="homeHeading">{{ title }}</h1>
                <hr>
                <p><span style="font-size: 26px;"><strong>{{ slogan }}</strong></span></p>
            </div>
        </div>
    </section>

    <section class="bg-primary" id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <h2 class="section-heading">{{ title1 }}</h2>
                    <hr class="light">
                    <p class="text-faded">{{ text1 }}</p>
                    <div class="temoignage">
                        <div class="container">
                            <div class="text-container">
                                <div class="text">{{ text2 }}</div>
                            </div>
                            <span><div class="fa fa-quote-left"></div></span>
                            <span><div class="fa fa-quote-right"></div></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-secondary" id="concept">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <div class="col-lg-4 text-center">
                        <h2>{{ title2 }}</h2>
                    </div>
                    <div class="col-lg-offset-1 col-lg-7">
                        <p>{{ text3 }}</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-tertiary" id="latest">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">{{ title3 }}</h2>
                    <h3 class="section-subheading text-muted">{{ text4 }}</h3>
                </div>
            </div>
            <div class="row">
                {% for artwork in artworks %}
                    <div class="col-md-4 col-sm-6 latest">
                        <a href="" class="box-link">
                            <div class="box-hover">
                                <div class="box-hover-content">
                                    <i class="fa fa-plus fa-3x"></i>
                                </div>
                            </div>
                            <img src="{{ asset('images/livre.jpg') }}" class="img-responsive" alt="nom oeuvre">
                        </a>
                        <div class="box-caption">
                            <h4>{{ artwork.name }}</h4>
                            <p class="text-muted">{{ artwork.author }}</p>
                            <hr>
                            <ul class="list-group black">
                                <li class="list-group-item list-group-item-heading"> {{ artwork.category.name }}</li>
                                <li class="list-group-item list-group-item-text"> <span>{{ artwork.description }}</span></li>
                            </ul>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <section class="contact" id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Ã‰crivez nous !</h2>
                </div>
            </div>
            <div class="row">
                <form>
                    <input name="name" type="text" class="feedback-input" placeholder="Votre Nom" />
                    <input name="email" type="text" class="feedback-input" placeholder="Votre Email" />
                    <textarea name="content" class="feedback-input" placeholder="Votre commentaire"></textarea>
                    <input type="submit" value="Envoyer"/>
                </form>
            </div>
        </div>
    </section>

{% endblock %}

